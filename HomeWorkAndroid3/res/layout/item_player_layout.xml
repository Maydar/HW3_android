<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <ImageView
       android:id="@+id/avatar_player"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:src="@drawable/ic_launcher" />

    <TextView 
        android:id="@+id/player_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_toRightOf="@id/avatar_player"
        android:layout_alignTop="@id/avatar_player"
        android:layout_marginLeft="20dp"
        android:text="Name" />
    <TextView 
        android:id="@+id/player_age"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/avatar_player"
        android:layout_alignBottom="@id/avatar_player"
        android:layout_marginLeft="20dp"
        android:text="Age" />

    <TextView
        android:id="@+id/player_surname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
		android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/player_name"
        android:text="Surname" />

</RelativeLayout>